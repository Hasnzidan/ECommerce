@model WebApplication1.Models.Product

<div class="modal fade" id="quickViewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Quick View</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="product-image-gallery">
                            <img src="" id="quickViewMainImage" class="img-fluid mb-3" alt="">
                            <div class="row" id="quickViewGallery">
                                <!-- Additional images will be loaded here -->
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h3 id="quickViewTitle"></h3>
                        <div class="price-block mb-3">
                            <span class="current-price h4" id="quickViewPrice"></span>
                            <span class="old-price text-muted text-decoration-line-through" id="quickViewOldPrice"></span>
                        </div>
                        <div class="description mb-3" id="quickViewDescription"></div>
                        <div class="availability mb-3">
                            <span class="badge" id="quickViewAvailability"></span>
                        </div>
                        <div class="quantity-selector mb-3">
                            <label>Quantity:</label>
                            <div class="input-group" style="width: 130px;">
                                <button class="btn btn-outline-secondary" type="button" onclick="decrementQuantity()">-</button>
                                <input type="number" class="form-control text-center" id="quickViewQuantity" value="1" min="1">
                                <button class="btn btn-outline-secondary" type="button" onclick="incrementQuantity()">+</button>
                            </div>
                        </div>
                        <div class="action-buttons">
                            <button class="btn btn-primary" onclick="addToCartFromQuickView()">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                            <button class="btn btn-outline-danger" onclick="toggleWishlist()" id="quickViewWishlist">
                                <i class="bi bi-heart"></i>
                            </button>
                            <button class="btn btn-outline-secondary" onclick="addToCompare()" id="quickViewCompare">
                                <i class="bi bi-arrow-left-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
