@model IEnumerable<Product>

<section class="products-section section-padding">
    <div class="container">
        <nav aria-label="breadcrumb" data-aos="fade-up">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/home/category">Categories</a></li>
                @if (ViewBag.Category != null)
                {
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Category.Name</li>
                }
                else
                {
                    <li class="breadcrumb-item active" aria-current="page">All Products</li>
                }
            </ol>
        </nav>

        <div class="row mb-4">
            <div class="col-md-6" data-aos="fade-right">
                <h2 class="section-title">
                    @if (!string.IsNullOrEmpty(ViewBag.SearchQuery))
                    {
                        <text>Search Results for "@ViewBag.SearchQuery"</text>
                    }
                    else if (ViewBag.Category != null)
                    {
                        @ViewBag.Category.Name
                    }
                    else
                    {
                        <text>All Products</text>
                    }
                </h2>
                @if (!string.IsNullOrEmpty(ViewBag.SearchQuery))
                {
                    <p class="text-muted">Found @Model.Count() products matching your search</p>
                }
            </div>
            <div class="col-md-6" data-aos="fade-left">
                <div class="d-flex justify-content-md-end align-items-center">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown">
                            Sort By
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="?sort=name">Name</a></li>
                            <li><a class="dropdown-item" href="?sort=price_asc">Price: Low to High</a></li>
                            <li><a class="dropdown-item" href="?sort=price_desc">Price: High to Low</a></li>
                            <li><a class="dropdown-item" href="?sort=newest">Newest First</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-6 col-md-4 col-lg-3" data-aos="fade-up">
                    <div class="product-card">
                        <div class="product-image">
                            <a href="/home/item/@product.Id">
                                @if (!string.IsNullOrEmpty(product.Photo))
                                {
                                    <img src="@product.Photo" alt="@product.Name" class="img-fluid">
                                }
                                else
                                {
                                    <img src="/assets/img/no-image.jpg" alt="No Image" class="img-fluid">
                                }
                            </a>
                            @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                            {
                                <div class="product-badge bg-danger">
                                    Sale
                                </div>
                            }
                        </div>
                        <div class="product-body">
                            @if (product.Category != null)
                            {
                                <div class="product-category">
                                    <a href="/home/products?categoryId=@product.CategoryId">@product.Category.Name</a>
                                </div>
                            }
                            <h5 class="product-title">
                                <a href="/home/item/@product.Id">@product.Name</a>
                            </h5>
                            <div class="product-price">
                                @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                                {
                                    <span class="old-price">$@product.OldPrice?.ToString("0.00")</span>
                                }
                                <span class="current-price">$@product.Price?.ToString("0.00")</span>
                            </div>
                            <div class="product-actions">
                                <button onclick="addToCart(@product.Id, 1)" class="btn btn-primary btn-sm">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5" data-aos="fade-up">
                <i class="bi bi-emoji-frown display-1"></i>
                <h3 class="mt-3">No Products Found</h3>
                <p class="text-muted">Try adjusting your search or filter to find what you're looking for.</p>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
        // Initialize AOS
        AOS.init({
            duration: 1000,
            easing: 'ease-in-out',
            once: true,
            mirror: false
        });

        // Add to cart
        function addToCart(productId, quantity) {
            $.ajax({
                url: '/Home/AddToCart',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: quantity
                },
                success: function (result) {
                    showToast('Success', 'Product added to cart!', 'success');
                    updateCartCount(result.cartCount);
                },
                error: function () {
                    showToast('Error', 'Failed to add product to cart', 'error');
                }
            });
        }
    </script>
}
