@model IEnumerable<WebApplication1.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Categories</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus"></i> Create New Category
                </a>
            </div>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(item.Photo))
                            {
                                <img src="/@item.Photo" class="card-img-top" alt="@item.Name">
                            }
                            else
                            {
                                <img src="/images/default-category.jpg" class="card-img-top" alt="Default Category Image">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                            <div class="card-footer bg-transparent border-top-0">
                                <div class="btn-group w-100">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-folder-x display-1 text-muted"></i>
                    <h3 class="mt-3">No Categories Found</h3>
                    <p class="text-muted">Start by creating a new category.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize any JavaScript functionality here
        $(document).ready(function() {
            // Add any necessary JavaScript initialization
        });
    </script>
}
